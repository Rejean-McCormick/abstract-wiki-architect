# .env

# --- Google Gemini Configuration ---
# Required for the AI Refiner (Tier 2 Upgrade System)
GOOGLE_API_KEY=your_gemini_api_key_here

# --- Database Configuration ---
# (Default for Docker setup)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=abstract_wiki
DATABASE_URL=postgresql://user:password@db:5432/abstract_wiki

# --- API Settings ---
# Environment: 'development' or 'production'
ENV_STATE=development
LOG_LEVEL=INFO