{
  "_meta": {
    "family": "germanic",
    "version": 2.1,
    "description": "Shared Germanic grammar matrix. Includes perfect German adjective declensions (Weak/Strong/Mixed) and Scandi suffix logic.",
    "notes": "German adjectives must check the article type (Definite->Weak, Indefinite->Mixed, None->Strong) to select the correct ending."
  },
  "languages": {
    "en": {
      "meta": { "language_code": "en", "name": "English" },
      "syntax": {
        "basic_word_order": "SVO",
        "adjective_position": "pre",
        "bio_default_tense": "present"
      },
      "articles": {
        "definite": { "singular": "the", "plural": "the" },
        "indefinite": { "singular": { "default": "a", "before_vowel": "an" }, "plural": "" }
      },
      "nouns": {
        "gender_defaults": "common",
        "irregular_plurals": {
          "person": "people", "man": "men", "woman": "women",
          "child": "children", "scientist": "scientists"
        }
      },
      "adjectives": {
        "inflects": false
      },
      "verbs": {
        "copula": {
          "present": { "1sg": "am", "2sg": "are", "3sg": "is", "pl": "are" },
          "past": { "1sg": "was", "2sg": "were", "3sg": "was", "pl": "were" }
        }
      }
    },
    "de": {
      "meta": { "language_code": "de", "name": "German" },
      "syntax": {
        "basic_word_order": "SVO",
        "adjective_position": "pre",
        "bio_default_tense": "present"
      },
      "articles": {
        "definite": {
          "m_nom": "der", "f_nom": "die", "n_nom": "das", "pl_nom": "die",
          "m_acc": "den", "f_acc": "die", "n_acc": "das", "pl_acc": "die"
        },
        "indefinite": {
          "m_nom": "ein", "f_nom": "eine", "n_nom": "ein",
          "m_acc": "einen", "f_acc": "eine", "n_acc": "ein"
        }
      },
      "nouns": {
        "genders": ["m", "f", "n"],
        "plural_suffix_default": "en",
        "irregular_plurals": {
          "Mann": "Männer", "Frau": "Frauen", "Kind": "Kinder"
        }
      },
      "adjectives": {
        "inflects": true,
        "declension_patterns": {
          "weak": {
            "description": "Used after definite articles (der/die/das)",
            "nom": { "m": "e", "f": "e", "n": "e", "pl": "en" },
            "acc": { "m": "en", "f": "e", "n": "e", "pl": "en" },
            "dat": { "m": "en", "f": "en", "n": "en", "pl": "en" },
            "gen": { "m": "en", "f": "en", "n": "en", "pl": "en" }
          },
          "mixed": {
            "description": "Used after indefinite articles (ein/eine)",
            "nom": { "m": "er", "f": "e", "n": "es", "pl": "en" },
            "acc": { "m": "en", "f": "e", "n": "es", "pl": "en" }
          },
          "strong": {
            "description": "Used with no article",
            "nom": { "m": "er", "f": "e", "n": "es", "pl": "e" },
            "acc": { "m": "en", "f": "e", "n": "es", "pl": "e" },
            "dat": { "m": "em", "f": "er", "n": "em", "pl": "en" }
          }
        }
      },
      "verbs": {
        "copula": {
          "present": { "1sg": "bin", "2sg": "bist", "3sg": "ist", "pl": "sind" },
          "past": { "1sg": "war", "2sg": "warst", "3sg": "war", "pl": "waren" }
        }
      }
    },
    "nl": {
      "meta": { "language_code": "nl", "name": "Dutch" },
      "syntax": { "bio_default_tense": "present" },
      "articles": {
        "definite": { "common": "de", "neuter": "het", "pl": "de" },
        "indefinite": { "default": "een" }
      },
      "adjectives": {
        "inflects": true,
        "rules": {
          "attributive_common": "e",
          "attributive_neuter_def": "e",
          "attributive_neuter_indef": "",
          "predicative": ""
        }
      },
      "verbs": {
        "copula": {
          "present": { "1sg": "ben", "2sg": "bent", "3sg": "is", "pl": "zijn" },
          "past": { "1sg": "was", "2sg": "was", "3sg": "was", "pl": "waren" }
        }
      }
    },
    "sv": {
      "meta": { "language_code": "sv", "name": "Swedish" },
      "syntax": { "bio_default_tense": "present" },
      "articles": {
        "type": "suffix",
        "definite_suffixes": { "common": "en", "neuter": "et", "pl": "na" },
        "indefinite": { "common": "en", "neuter": "ett" }
      },
      "adjectives": {
        "inflects": true,
        "forms": {
          "common": "",
          "neuter": "t",
          "plural": "a",
          "definite": "a"
        }
      },
      "verbs": {
        "copula": {
          "present": { "default": "är" },
          "past": { "default": "var" }
        }
      }
    },
    "da": {
      "meta": { "language_code": "da", "name": "Danish" },
      "syntax": { "bio_default_tense": "present" },
      "articles": {
        "type": "suffix",
        "definite_suffixes": { "common": "en", "neuter": "et", "pl": "ne" },
        "indefinite": { "common": "en", "neuter": "et" }
      },
      "adjectives": {
        "inflects": true,
        "forms": {
          "common": "",
          "neuter": "t",
          "plural": "e",
          "definite": "e"
        }
      },
      "verbs": {
        "copula": {
          "present": { "default": "er" },
          "past": { "default": "var" }
        }
      }
    },
    "no": {
      "meta": { "language_code": "no", "name": "Norwegian" },
      "syntax": { "bio_default_tense": "present" },
      "articles": {
        "type": "suffix",
        "definite_suffixes": { "m": "en", "f": "a", "n": "et", "pl": "ene" },
        "indefinite": { "m": "en", "f": "ei", "n": "et" }
      },
      "adjectives": {
        "inflects": true,
        "forms": {
          "common": "",
          "neuter": "t",
          "plural": "e",
          "definite": "e"
        }
      },
      "verbs": {
        "copula": {
          "present": { "default": "er" },
          "past": { "default": "var" }
        }
      }
    }
  }
}