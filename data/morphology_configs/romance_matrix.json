{
  "_meta": {
    "family": "romance",
    "version": 2.1,
    "description": "Advanced Romance grammar matrix. Includes split definite/indefinite articles, Romanian suffix logic, French BAGS adjective ordering, and Italian preposition fusion.",
    "notes": "Engine must check 'syntax.article_type' (prefix/suffix) and 'syntax.adjective_rules' before linearizing."
  },
  "languages": {
    "it": {
      "name": "Italian",
      "syntax": {
        "article_type": "prefix",
        "adjective_position": "post",
        "preposition_fusion": true
      },
      "articles": {
        "indefinite": {
          "m": {
            "default": "un",
            "vowel": "un",
            "s_impure": "uno"
          },
          "f": {
            "default": "una",
            "vowel": "un'"
          }
        },
        "definite": {
          "m": {
            "default": "il",
            "vowel": "l'",
            "s_impure": "lo",
            "pl_default": "i",
            "pl_vowel": "gli",
            "pl_impure": "gli"
          },
          "f": {
            "default": "la",
            "vowel": "l'",
            "pl_default": "le",
            "pl_vowel": "le"
          }
        }
      },
      "preposition_fusion": {
        "di": { "il": "del", "lo": "dello", "la": "della", "i": "dei", "gli": "degli", "le": "delle" },
        "a":  { "il": "al",  "lo": "allo",  "la": "alla",  "i": "ai",  "gli": "agli",  "le": "alle"  },
        "da": { "il": "dal", "lo": "dallo", "la": "dalla", "i": "dai", "gli": "dagli", "le": "dalle" },
        "in": { "il": "nel", "lo": "nello", "la": "nella", "i": "nei", "gli": "negli", "le": "nelle" },
        "su": { "il": "sul", "lo": "sullo", "la": "sulla", "i": "sui", "gli": "sugli", "le": "sulle" }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "tore", "replace_with": "trice" },
          { "ends_with": "ore",  "replace_with": "rice"  },
          { "ends_with": "o",    "replace_with": "a"     }
        ],
        "irregulars": {
          "poeta":   "poetessa",
          "duca":    "duchessa",
          "re":      "regina",
          "attore":  "attrice",
          "scrittore": "scrittrice",
          "fisico":  "fisica",
          "medico":  "medica"
        }
      },
      "phonetics": {
        "impure_triggers": ["s_consonant", "z", "ps", "gn", "x", "y"],
        "elision": true
      },
      "structure": "{name} è {article}{sep}{profession} {nationality}."
    },
    "es": {
      "name": "Spanish",
      "syntax": {
        "article_type": "prefix",
        "adjective_position": "post",
        "preposition_fusion": true
      },
      "articles": {
        "indefinite": {
          "m": { "default": "un", "vowel": "un" },
          "f": { "default": "una", "stressed_a": "un" }
        },
        "definite": {
          "m": { "default": "el", "pl": "los" },
          "f": { "default": "la", "stressed_a": "el", "pl": "las" }
        }
      },
      "preposition_fusion": {
        "a": { "el": "al" },
        "de": { "el": "del" }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "or", "replace_with": "ora" },
          { "ends_with": "án", "replace_with": "ana" },
          { "ends_with": "o",  "replace_with": "a"   }
        ],
        "irregulars": {
          "rey":       "reina",
          "actor":     "actriz",
          "emperador": "emperatriz",
          "héroe":     "heroína",
          "escritor":  "escritora",
          "doctor":    "doctora",
