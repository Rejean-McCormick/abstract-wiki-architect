      },
      "phonetics": {
        "impure_triggers": [],
        "stressed_a_words": ["águila", "agua", "arma", "alma", "área", "hacha", "hambre"],
        "elision": false
      },
      "structure": "{name} es {article}{sep}{profession} {nationality}."
    },
    "fr": {
      "name": "French",
      "syntax": {
        "article_type": "prefix",
        "adjective_position": "post",
        "adjective_rules": {
          "pre_nominal": ["grand", "petit", "bon", "mauvais", "jeune", "vieux", "beau", "nouveau", "joli", "gros", "long", "haut"]
        },
        "preposition_fusion": true
      },
      "articles": {
        "indefinite": {
          "m": { "default": "un", "vowel": "un" },
          "f": { "default": "une", "vowel": "une" }
        },
        "definite": {
          "m": { "default": "le", "vowel": "l'", "pl": "les" },
          "f": { "default": "la", "vowel": "l'", "pl": "les" }
        }
      },
      "preposition_fusion": {
        "à": { "le": "au", "les": "aux" },
        "de": { "le": "du", "les": "des" }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "eur", "replace_with": "euse"  },
          { "ends_with": "teur","replace_with": "trice" },
          { "ends_with": "ien", "replace_with": "ienne" },
          { "ends_with": "on",  "replace_with": "onne"  },
          { "ends_with": "el",  "replace_with": "elle"  }
        ],
        "irregulars": {
