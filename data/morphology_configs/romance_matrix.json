      },
      "phonetics": {
        "elision": false
      },
      "structure": "{name} é {article}{sep}{profession} {nationality}."
    },
    "ro": {
      "name": "Romanian",
      "syntax": {
        "article_type": "mixed",
        "notes": "Indefinite articles are prefixes. Definite articles are suffixes attached to the stem.",
        "adjective_position": "post"
      },
      "articles": {
        "indefinite": {
          "m": { "default": "un" },
          "f": { "default": "o" }
        },
        "definite": {
          "m": { "suffix": "ul", "suffix_vowel": "le" },
          "f": { "suffix": "a", "suffix_vowel": "ua" }
        }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "ian", "replace_with": "iană" },
          { "ends_with": "an",  "replace_with": "ană"  }
        ],
        "irregulars": {
          "rege":     "regină",
          "doctor":   "doctoriță",
          "scriitor": "scriitoare"
        }
      },
      "phonetics": {
        "elision": false
      },
      "structure": "{name} este {article}{sep}{profession} {nationality}."
    }
  }
}