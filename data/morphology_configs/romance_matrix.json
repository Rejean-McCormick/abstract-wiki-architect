          "écrivain": "écrivaine",
          "scientifique": "scientifique"
        }
      },
      "phonetics": {
        "elision": true
      },
      "structure": "{name} est {article}{sep}{profession} {nationality}."
    },
    "pt": {
      "name": "Portuguese",
      "syntax": {
        "article_type": "prefix",
        "adjective_position": "post",
        "preposition_fusion": true
      },
      "articles": {
        "indefinite": {
          "m": { "default": "um", "vowel": "um" },
          "f": { "default": "uma", "vowel": "uma" }
        },
        "definite": {
          "m": { "default": "o", "pl": "os" },
          "f": { "default": "a", "pl": "as" }
        }
      },
      "preposition_fusion": {
        "de": { "o": "do", "a": "da", "os": "dos", "as": "das" },
        "em": { "o": "no", "a": "na", "os": "nos", "as": "nas" },
        "a":  { "a": "à",  "as": "às", "o": "ao",  "os": "aos" }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "or",  "replace_with": "ora" },
          { "ends_with": "ês",  "replace_with": "esa" },
          { "ends_with": "o",   "replace_with": "a"   }
        ],
        "irregulars": {
