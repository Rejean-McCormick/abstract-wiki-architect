    "requirements": ["Grammar", "Paradigms"],
    "imports": ["Grammar{code}", "(P = Paradigms{code})"],
    "lincat_base": "Grammar{code}",
    "rules": {
      "SimpNP": "{simp_np}",
      "John": "mkNP (P.mkPN \"John\")",
      "Here": "P.mkAdv \"here\"",
      "apple_N": "mkCN (P.mkN \"apple\")"
    }
  },
  {
    "name": "BRONZE",
    "description": "Manual Construction (Cat + Noun + Paradigms)",
    "requirements": ["Cat", "Noun", "Paradigms"],
    "imports": ["Cat{code}", "Noun{code}", "(P = Paradigms{code})"],
    "lincat_base": "Cat{code}",
