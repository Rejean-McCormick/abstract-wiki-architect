      "SimpNP": "MassNP cn",
      "John": "UsePN (P.mkPN \"John\")",
      "Here": "P.mkAdv \"here\"",
      "apple_N": "UseN (P.mkN \"apple\")"
    }
  },
  {
    "name": "IRON",
    "description": "Survival Mode (Cat + Noun Only, Read-Only)",
    "requirements": ["Cat", "Noun"],
    "imports": ["Cat{code}", "Noun{code}"],
    "lincat_base": "Cat{code}",
    "rules": {
      "SimpNP": "MassNP cn",
      "John": "MassNP (UseN apple_N)", 
      "Here": "cn",
      "apple_N": "UseN apple_N"
    }
  }
